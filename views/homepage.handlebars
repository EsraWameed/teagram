<section class="feed-page">
        <aside class="topbar">
            <h1>TEAGRAM</h1>
            <img src="/images/gallery-icon.png" onclick="document.getElementById('gallery-page').style.display='block'">
            <img onclick="document.getElementById('profile-page').style.display='block'" src="/images/profile-icon.pmg.png">
        </aside>

        <aside class="sidebar">
            <h1>TEAGRAM</h1>
            <img src="/images/home-icon.png">
            <img id="gallery-btn" src="/images/gallery-icon.png" onclick="document.getElementById('gallery-page').style.display='block'">
            <img id="post-btn" onclick="document.getElementById('upload-page').style.display='block'" src="/images/white-plus-icon.png">
            <img id="profile-btn" onclick="document.getElementById('profile-page').style.display='block'" src="/images/profile-icon.pmg.png">
            <img onclick="document.getElementById('logout-page').style.display='block'" src="/images/logout-icon.png">
        </aside>

        
  
    {{#each posts}}

    <div class="feed">
        <article class="posts">
            <h2>{{this.user.username}}</h2>
            <a href="/post/{{this.id}}">
                <img class="user-post" src="{{this.image_post}}">
            </a>
            <p class="caption">{{this.caption}}</p>
            <img class="like-btn" src="/images/heart-icon.png">
        </article>
    </div>
    {{/each}}


</section>


<div id="gallery-page" class="modal">
	<div class="upload-form animate">
		<span onclick="document.getElementById('gallery-page').style.display='none'" class="close">&times;</span>
		<h1 class="title">YOUR POSTS<h1>

        <div class="container" style="background-color:#f1f1f1">
            {{#each posts}}
            <div class="feed">
                <article class="posts">
                    <h2>{{this.user.username}}</h2>
                    <a href="/dashboard/editPost/{{this.id}}">
                    <img class="user-post" src="{{this.image_post}}" alt="posted image">
                    </a>

                    <p class="caption">{{this.caption}}</p>
                </article>
            </div>
            {{/each}}
        </div>
	</div>
</div>

<div id="upload-page" class="modal">
	<div class="upload-form animate">
		<span onclick="document.getElementById('upload-page').style.display='none'" class="close">&times;</span>
		<h1 class="title">UPLOAD MEDIA</h1>

        <form action="/dashboard" method="post" enctype="multipart/form-data">
            <div class="container" style="background-color:#f1f1f1">
                <label for="upload-file"><img class="upload-icon" src="/images/upload-icon.png"></label>
                <input type="file" name="sampleFile" id="upload-file" accept="image/*">
		    </div> 
            <div class="container" style="background-color:#f1f1f1">
                <input type="submit" class="submit-btn">
            </div>
        </form>
	</div>
</div>


 <div id="profile-page" class="modal">

		<form class="profile-form animate">
			<span onclick="document.getElementById('profile-page').style.display='none'" class="close">&times;</span>

            <h1 class="title">YOUR ACCOUNT</h1>
            <label  for="upload-file"><img class="change-profile" src="/images/profile-icon.pmg.png"></label>
            <input type="file" id="upload-file">
        
            <div class="container profile-footer" style="background-color:#f1f1f1">
                <button class="submit-btn" type="submit">Update Profile</button>
            </div>
		</form>
</div>

<div id="logout-page" class="modal">

		<form class="profile-form animate" >
			<span onclick="document.getElementById('logout-page').style.display='none'" class="close">&times;</span>
			<h1 class="title">LOGOUT</h1>

			<div class="container" style="background-color:#f1f1f1">
				<button class="submit-btn" type="submit" id="logout">Confirm</button>
			</div>
		</form>
</div>


