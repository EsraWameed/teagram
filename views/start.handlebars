<header class="homepage">
    <h1 class="company">TEAGRAM</h1>

    <img class="login-btn" onclick="document.getElementById('signin-page').style.display='block'"src="public/images/profile-icon.pmg.png">

	<div id="signin-page" class="modal">

		<form class="modal-content animate" >
			<span onclick="document.getElementById('signin-page').style.display='none'" class="close" title="Close Modal">&times;</span>
			<h1 class="title">TEAGRAM</h1>

			<div class="container">
				<input type="text" placeholder="Username" name="uname" required>

				<input type="password" placeholder="Password" name="psw" required>

				<button class="submit-btn" type="submit">Login</button>
                <p>Remember Me</p>
				<input type="checkbox" checked="checked"> 
                <span class="psw">Forgot <a href="#">password?</a></span>
                    
			</div>

			<div class="container" style="background-color:#f1f1f1">
				<button class="signup-btn" type="submit" onclick="document.getElementById('signup-page').style.display='block', document.getElementById('signin-page').style.display='none'">Create Account</button>
			</div>
		</form>
</header>

    <div id="signup-page" class="modal">

		<form class="modal-content animate" >
			<span onclick="document.getElementById('signup-page').style.display='none'" class="close" title="Close Modal">&times;</span>
			<h1 class="title">Sign Up</h1>

			<div class="container">
                <input type="text" placeholder="First Name" name="firstname" required>
                <input type="text" placeholder="Last name" name="lastname" required>
				<input type="text" placeholder="Username" name="uname" required>
				<input type="password" placeholder="Password" name="psw" required>
                <label for="dob">Date Of Birth</label>

                <input type="date" id="dob" name="dob" max="2006-01-01">
                <p>Remember Me</p>
				<input type="checkbox" checked="checked"> 
			</div>

			<div class="container" style="background-color:#f1f1f1">
				<button class="signup-btn" type="submit">Sign Up</button>
			</div>
		</form>
	</div>