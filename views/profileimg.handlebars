 <aside class="sidebar">
        <h1>TEAGRAM</h1>
        <a href="/"><img src="/images/home-icon.png"></a>
        <img onclick="document.getElementById('logout-page').style.display='block'" src="/images/logout-icon.png">
</aside>



<section class="profile-page">
    <form class="upload-form" action="/userimage" method="post" enctype="multipart/form-data">
        <h1 style="color:white">My Profile</h1>
        
        <section>
        <div>
            {{#each userImg}}
            <label for="upload-file"><img class="profile-icon" src="{{this.image_profile}}"></label>
            <div class="preview-profile"></div>
            <input type="file" name="image" id="upload-file" accept="image/*" style="display:none">
            
            <h5>first name: {{this.firstName}}</h5>
            <h5>last name: {{this.lastName}}</h5>
            <h5>username: {{this.username}}</h5>
            {{/each}}
        </div>
        <div class="container" style="background-color:#f1f1f1">
            <input type="submit" class="submit-btn">
        </div>
        </section>
    </form>
</section>

<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script>
    $(document).ready(function () {
        let imagesPreview = function (input, placeToInsertImagePreview) {
            if (input.files) {
                let filesAmount = input.files.length;
                for (i = 0; i < filesAmount; i++) {
                    let reader = new FileReader();
                    reader.onload = function (event) {
                        $($.parseHTML("<img>"))
                            .attr("src", event.target.result)
                            .appendTo(placeToInsertImagePreview);
                    };
                    reader.readAsDataURL(input.files[i]);
                }
            }
        };
        $("#upload-file").on("change", function () {
            imagesPreview(this, "div.preview-profile");
        });
    });
</script>

<div id="logout-page" class="modal">

		<form class="profile-form animate" >
			<span onclick="document.getElementById('logout-page').style.display='none'" class="close">&times;</span>
			<h1 class="title">LOGOUT</h1>

			<div class="container" style="background-color:#f1f1f1">
				<button class="submit-btn" type="submit" id="logout">Confirm</button>
			</div>
		</form>
</div>

